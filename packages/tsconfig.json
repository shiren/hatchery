{
  "compilerOptions": {
    "noEmit": true,
    "target": "ESNext",
    "module": "commonJS",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "node",
      "jest"
    ],
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}